@page
@model AspLesson4.Pages.Edit.IndexModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<form class="col-5" method="post">
    <div class="mb-3">
        <label class="form-label">Product ID</label>
        <input asp-for="Product.Id" value="@Model.Product.Id" type="text" class="form-control" readonly>
    </div>
    <div class="mb-3">
        <label class="form-label">Product Name</label>
        <input asp-for="Product.Name" value="@Model.Product.Name" type="text" class="form-control" >
    </div>
    <div class="mb-3">
        <label class="form-label">Product Price</label>
        <input asp-for="Product.Price" value="@Model.Product.Price" type="number" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>

</form>